<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         forceCoversAnnotation="false"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         strict="false"
         bootstrap="bootstrap.php"
        >
    <testsuites>
        <testsuite name="Doctrine Extras Tests">
            <directory>DHolmes/DoctrineExtras/Tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory suffix=".php">../src/DHolmes/DoctrineExtras</directory>
        </whitelist>
    </filter>
</phpunit>